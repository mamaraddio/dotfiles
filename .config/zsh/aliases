# -*- mode: shell-script -*-
#Shell aliases for ZSH
#
alias sudo='sudo -E '
alias nv='nvim'
alias bat='bat --theme="Visual Studio Dark+"'
alias cat='bat -p'
alias ls='exa --group-directories-first --icons'
alias ll='ls -lh'
alias la='ll -a'
alias tree='ls -hT'
alias fastfetch='fastfetch --logo-color-1 blue --color blue'
alias man='batman'
alias ip='ip -c -h'
alias py='python'
alias lsblk='lsblk -o +LABEL'
alias remove-orphans='pacman -Rnu $(pacman -Qtdq)' 
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotcfg --work-tree=$HOME'
alias activate='source ./.venv/bin/activate'
alias create-venv='py -m venv .venv'
alias rmduplicate='/home/shadow/Scrivania/Programming/Python/Duplicate_Remover/output/rmduplicate'
alias fwe='ssh mamaraddio@fwexternal.sacbo.it'
alias fwe_log='ssh mamaraddio@fwexternal.sacbo.it | tee -i "/home/$(whoami)/Scrivania/FWE_$(date +%d-%m-%YT%H:%M:%S).log"'
alias fwi='ssh mamaraddio@fwinternal.sacbo.it'
alias fwi_log='ssh mamaraddio@fwinternal.sacbo.it | tee -i "/home/$(whoami)/Scrivania/FWI_$(date +%d-%m-%YT%H:%M:%S).log"'
alias faz='ssh mamaraddio@fortianalyzer.sacbo.it'
alias faz_log='ssh mamaraddio@fortianalyzer.sacbo.it | tee -i "/home/$(whoami)/Scrivania/FAZ_$(date +%d-%m-%YT%H:%M:%S).log"'
alias replace-session='(kwin_x11 --replace && plasmashell --replace)'
alias update-mirror-list='reflector -c Italy -a 6 --sort rate --save /etc/pacman.d/mirrorlist --verbose'
alias zreload='exec zsh'
