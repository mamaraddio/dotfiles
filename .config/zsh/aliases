# -*- mode: shell-script -*-
#Shell aliases for ZSH
#
alias sudo='sudo -E '
alias nv='nvim'
alias bat='bat --theme="Visual Studio Dark+"'
alias cat='bat -p'
alias ls='exa --group-directories-first --icons'
alias ll='ls -lh'
alias la='ll -a'
alias tree='ls -hT'
alias fastfetch='fastfetch --logo-color-1 blue --color blue'
alias man='batman'
alias ip='ip -c -h'
alias py='python'
alias lsblk='lsblk -o +LABEL'
alias remove-orphans='pacman -Rnu $(pacman -Qtdq)'
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotcfg --work-tree=$HOME'
alias activate='source ./.venv/bin/activate'
alias create-venv='py -m venv .venv'
alias replace-session='(kwin_x11 --replace && plasmashell --replace)'
alias mirror='reflector -c Italy -a 6 --sort rate --save /etc/pacman.d/mirrorlist --verbose'
alias zreload='exec zsh'
